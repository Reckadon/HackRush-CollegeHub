rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
       match /users/{userId} {
          allow read: if Signedin() && request.auth.uid == userId;  
        }
    }
    match /clubsCollection/{clubId} {
      allow read: if Signedin();
      allow write: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.name));
      allow create: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.name));
      allow update: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.name));
      allow delete: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.name));
    }

    match /eventsCollection/{eventId} {
      allow read: if Signedin() && resource.data.isApproved == true;
      allow write: if Signedin() && IsAdmin();
      allow create: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.clubAffiliation[0]));
      allow update: if Signedin() && (IsAdmin());
      allow delete: if Signedin() && (IsAdmin() || checkClubAdmin(resource.data.clubAffiliation[0]));
    }

    function checkClubAdmin(clubName){
      return Signedin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0].split('-')[1] == 'cordinator' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0].split('-')[0] == clubName;
    }

    function IsAdmin(){
      return Signedin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles[0] == 'admin';
    }
  }
}
function Signedin(){
  return request.auth != null;
}